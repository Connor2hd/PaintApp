@model IEnumerable<PaintAppModels.Paint>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaintName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaintSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MSRP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaintName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaintSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MSRP)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaintId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaintId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaintId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
